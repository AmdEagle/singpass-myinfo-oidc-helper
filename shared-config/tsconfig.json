// =============================================================================
// This is the typescript config file meant for the project source
// =============================================================================
{
	"compilerOptions": {
		/* General settings */
		"target": "ES2019",
		/* Module settings */
		"module": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		/* Compiler settings */
		"allowJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		/* Output Files */
		"outDir": "build",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"preserveConstEnums": true,
		/* Paths */
		"lib": [
			"ES2020",
			"ES2021",
		]
	},
	"exclude": [
		"**/node_modules/*"
	]
}
