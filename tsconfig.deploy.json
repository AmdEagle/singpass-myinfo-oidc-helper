// Exclude tests
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/*.unit.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.apispec.ts",
		"src/**/*.bench.ts",
		"**/testutil/*",
		"**/__mocks__/*",
		"**/__tests__/*"
	]
}
