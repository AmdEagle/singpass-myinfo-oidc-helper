{
	"collectCoverageFrom": [
		"src/**/*.{js,jsx,ts,tsx}"
	],
	"coverageDirectory": "<rootDir>/coverage",
	"transform": {
		".(js|ts|jsx|tsx)$": "./node_modules/ts-jest/preprocessor.js"
	},
	"testMatch": [
		"<rootDir>/tests/**/?(*.)(spec).(js|ts)?(x)",
		"<rootDir>/src/**/?(*.)(spec).(js|ts)?(x)"
	],
	"modulePaths": [
		"src"
	],
	"moduleFileExtensions": [
		"js",
		"ts",
		"jsx",
		"tsx"
	],
	"testResultsProcessor": "./node_modules/jest-bamboo-formatter",
	"verbose": true,
	"bail": true,
	"testEnvironment": "node"
}
